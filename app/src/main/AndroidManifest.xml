<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.al3arrab.universalapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
        android:name=".RegisterActivity"
        android:theme="@style/AppTheme"
        android:label="@string/register">
        <!--android:parentActivityName=".MainActivity" >
        &lt;!&ndash; Parent activity meta-data to support 4.0 and lower &ndash;&gt;
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".RegisterActivity" /-->
    </activity>
        <activity
            android:name=".EditActivity"
            android:theme="@style/AppTheme"
            android:label="@string/action_edit">
            <!--android:parentActivityName=".MainActivity" >
            &lt;!&ndash; Parent activity meta-data to support 4.0 and lower &ndash;&gt;
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RegisterActivity" /-->
    </activity>
        <activity
        android:name=".NewUserActivity"
        android:theme="@style/AppTheme"
        android:label="@string/action_add"
        android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NewUserActivity" />
    </activity>
        <activity
            android:name=".MapsActivity"
            android:label="@string/title_activity_maps">
        </activity>
        <provider
            android:name=".data.RegisterProvider"
            android:authorities="com.android.al3arrab.universalapp"
            android:exported="false" />
    </application>

</manifest>